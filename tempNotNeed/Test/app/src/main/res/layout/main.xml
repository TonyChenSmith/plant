			android:background="#000000"
			android:layout_margin="20dp"/>

		<View
			android:layout_height="200dp"
			android:layout_width="200dp"
			android:background="#000000"
			android:layout_margin="20dp"/>

		<View
			android:layout_height="200dp"
			android:layout_width="200dp"
			android:background="#000000"
			android:layout_margin="20dp"/>

		<View
			android:layout_height="200dp"
			android:layout_width="200dp"
			android:background="#000000"
			android:layout_margin="20dp"/>

	</com.mycompany.myapp.FieldBlockLayout>

</RelativeLayout>

